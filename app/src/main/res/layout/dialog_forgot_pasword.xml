<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="Lấy lại mật khẩu"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:textSize="18sp" />
    <TextView
        android:layout_height="wrap_content"
        android:text="@string/note_forget_password"
        android:textColor="#BF021E"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textSize="12sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dForget_tilEmail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:hint="Email của bạn"
        app:suffixText="\@keep-exploring.com"
        app:boxStrokeColor="@color/black"
        app:counterEnabled="true"
        app:hintTextColor="@color/black"
        android:layout_width="match_parent">
        <com.google.android.material.textfield.TextInputEditText
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dForget_tilDisplayName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:hint="Tên hiển thị"
        app:boxStrokeColor="@color/black"
        app:counterEnabled="true"
        android:textSize="14sp"
        app:hintTextColor="@color/black"
        android:layout_width="match_parent">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dForget_tilBirthday"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:hint="Ngày sinh"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        android:layout_width="match_parent">
        <com.google.android.material.textfield.TextInputEditText
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dForget_btnSubmit"
            android:text="Xác nhận"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:textAllCaps="false"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/dForget_btnCancel"
            android:text="Hủy"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>