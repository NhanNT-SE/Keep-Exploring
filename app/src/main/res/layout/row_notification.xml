<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="5dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/row_notify_cvNotify"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="30dp">
        <ImageView
            android:id="@+id/row_notify_imgNotify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/row_notify_cvType"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:cardCornerRadius="12dp">
            <RelativeLayout
                android:id="@+id/row_notify_imgType"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
              />
        </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/row_notify_imgMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_more_horiz_black_24dp" />

    <TextView
        android:id="@+id/row_notify_tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toStartOf="@+id/row_notify_imgMore"
        android:layout_toEndOf="@+id/row_notify_cvType"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_notify_tvPubDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_notify_tvDesc"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:text="30/03/2020 21:11"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>