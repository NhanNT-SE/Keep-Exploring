<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingHorizontal="5dp"
    tools:context=".fragment.Fragment_EditPost">

    <ScrollView
        android:id="@+id/fEditPost_layoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fEditPost_imgAvatarUser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
              />
            <TextView
                android:id="@+id/fEditPost_tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/fEditPost_imgAvatarUser"
                android:textSize="15sp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/fEditPost_tvPubDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textStyle="italic|bold" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/fEditPost_viewPager"
                android:layout_below="@+id/fEditPost_imgAvatarUser"
                android:layout_marginTop="10dp"
                android:paddingStart="80dp"
                android:paddingEnd="80dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/fEditPost_tvTitleCategory"
                android:layout_below="@+id/fEditPost_viewPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="Danh mục:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fEditPost_tvCategory"
                android:layout_below="@+id/fEditPost_viewPager"
                android:layout_toEndOf="@+id/fEditPost_tvTitleCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:background="@drawable/border_tv"
                android:maxLines="5"
                android:padding="5dp"
                android:hint="Bấm vào để thêm danh mục"
                android:textSize="13sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/fEditPost_tvTitleAddress"
                android:layout_below="@+id/fEditPost_tvTitleCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="top"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="Địa chỉ:"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/fEditPost_tvAddress"
                android:layout_below="@+id/fEditPost_tvTitleCategory"
                android:layout_toEndOf="@+id/fEditPost_tvTitleAddress"
                android:layout_alignStart="@+id/fEditPost_tvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:maxLines="5"
                android:padding="5dp"
                android:background="@drawable/border_tv"
                android:hint="Bấm vào để thêm địa chỉ"
                android:textSize="13sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/fEditPost_tvTitleRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fEditPost_tvAddress"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="Đánh giá:"
                android:textSize="15sp"
                android:textStyle="bold" />
            <RatingBar
                android:id="@+id/fEditPost_ratingBar"
                android:layout_toEndOf="@+id/fEditPost_tvTitleRating"
                android:layout_below="@+id/fEditPost_tvAddress"
                android:layout_marginStart="5dp"
                android:stepSize="1"
                android:scaleX=".5"
                android:scaleY=".5"
                android:transformPivotX="0dp"
                android:transformPivotY="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/fEditPost_etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fEditPost_tvTitleRating"
                android:gravity="top"
                android:hint="Tiêu đề"
                android:background="@drawable/border_tv"
                android:maxLines="5"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fEditPost_etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fEditPost_etTitle"
                android:layout_marginVertical="5dp"
                android:gravity="top"
                android:background="@drawable/border_tv"
                android:hint="Miêu tả"
                android:padding="5dp"
                android:textSize="13sp" />
        </RelativeLayout>
    </ScrollView>

    <com.ramotion.circlemenu.CircleMenuView
        android:id="@+id/fEditPost_circleMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleX=".7"
        android:scaleY=".7"
        app:button_colors="@array/colors"
        app:button_icons="@array/icons"
        app:distance="80dp"
        app:icon_menu="@drawable/check" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fEditPost_fabAddContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/colorPrimary"
        app:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_camera_avatar_black"
        app:fabSize="mini"
        app:maxImageSize="24dp"
        app:tint="@android:color/white" />
</RelativeLayout>

