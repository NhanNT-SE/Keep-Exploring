<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentBottom="true"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:text="Sửa bình luận"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:fontFamily="@font/nabila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/dEditComment_layoutImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/dEditComment_imgComment"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:background="@color/light_transparent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/dEditComment_imgDeleteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dEditComment_imgComment"
            android:scaleType="fitXY"
            android:src="@drawable/ic_close_black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dEditComment_etComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/border_tv"
            android:gravity="top"
            android:hint="Nhập bình luận..."
            android:maxLines="3"
            android:minHeight="40dp"
            android:padding="5dp"
            android:paddingHorizontal="5dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/dEditComment_imgCamera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_camera_black_24dp" />

        <ImageView
            android:id="@+id/dEditComment_imgSend"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_comment_send" />
    </LinearLayout>
</LinearLayout>