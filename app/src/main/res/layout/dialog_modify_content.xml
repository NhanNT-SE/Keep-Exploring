<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/dModifyContent_tvTitle"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/nabila"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:scaleType="fitCenter"
        android:id="@+id/dModifyContent_imgContent"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/dModifyContent_layoutPickImgContent"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:background="#F3F3F3"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:innerRadius="0dp"
            android:shape="ring"
            app:cardCornerRadius="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera_avatar_black" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <EditText
        android:id="@+id/dModifyContent_etDescriptions"
        android:hint="Mô tả..."
        android:layout_marginTop="3dp"
        android:paddingHorizontal="5dp"
        android:gravity="top"
        android:textSize="13sp"
        android:background="@drawable/border_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dModifyContent_btnAdd"
            android:text="Add"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/dModifyContent_btnCancel"
            android:text="Hủy"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>